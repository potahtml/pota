{
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "types",

		"declaration": true,
		// helps to click "implementation" and go to the source code
		"declarationMap": true,
		"emitDeclarationOnly": true,
		// "preserveWatchOutput": true,

		"allowJs": true,
		"checkJs": true,
		"strict": true,
		"noImplicitAny": false,
		"strictNullChecks": false,
		"skipLibCheck": true,

		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ESNext",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"resolveJsonModule": true,

		"jsx": "preserve",
		"jsxImportSource": "pota"
	},
	"include": ["src", "typescript/global.d.ts"],
	"exclude": ["node_modules", "src/babel-preset", "src/release"]
}
